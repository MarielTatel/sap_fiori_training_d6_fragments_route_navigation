<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:t="com.training"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m" controllerName="com.training.exer1tatel.controller.MainView" displayBlock="true">
    <Page id="page" title="{i18n>title}" floatingFooter="true">
        <content>
            <VBox id="idVBox" class="sapUiSmallMargin">
                <f:SimpleForm id="idSimpleForm" editable="true" layout="ResponsiveGridLayout" title="{i18n>detailsLbl}" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                    <f:content>
                        <Label id="idLblFName" text="{i18n>firstNameLbl}"/>
                        <Input id="idInptFName" value=""/>
                        <Label id="idLblLName" text="{i18n>lastNameLbl}"/>
                        <Input id="idInptLName" value=""/>
                        <Label id="idLblMOP" text="{i18n>mopLbl}"/>
                        <Select id="idSelMOP" forceSelection="false" change="onChangeMOP">
                            <items>
                                <core:Item id="idItmCOD" text="{i18n>codTxt}" key="COD"/>
                                <core:Item id="idItmCC" text="{i18n>ccTxt}" key="CC"/>
                                <core:Item id="idItmGCash" text="{i18n>gcashTxt}" key="GCASH"/>
                            </items>
                        </Select>

                        <!-- MOP = GCASH -->
                        <Label id="idLblPhone" text="{i18n>phoneLbl}" visible="false"/>
                        <Input id="idInputPhone" value="" visible="false"/>

                        <!-- MOP = CC -->
                        <Label id="idLblCardOwner" text="{i18n>cardOwnerLbl}" visible="false"/>
                        <Input id="idInputCardOwner" value="" visible="false"/>
                        <Label id="idLblCardNum" text="{i18n>cardNumLbl}" visible="false"/>
                        <Input class="placeholderFont" id="idInputCardNum" placeholder="1234 5678 8900 0000" value="" visible="false"/>
                        <Label id="idLblExpDate" text="{i18n>expLbl}" visible="false"/>
                        <Input class="placeholderFont" id="idInputExpDate" placeholder="MM/YY" maxLength="5" value="" visible="false">
                            <layoutData>
                                <l:GridData id="gridInputExpDate" span="XL2 L2 M2 S12"/>
                            </layoutData>
                        </Input>
                        <Label id="idLblCVC" text="{i18n>cvcLbl}" visible="false">
                            <layoutData>
                                <l:GridData id="gridLblCVC" span="XL1 L1 M1"/>
                            </layoutData>
                        </Label>
                        <Input class="placeholderFont hideReveal" id="idInputCVC" placeholder="CVC" type="Password" maxLength="3" visible="false">
                            <layoutData>
                                <l:GridData id="gridInputCVC" span="XL2 L2 M2 S12"/>
                            </layoutData>
                        </Input>
                    </f:content>
                </f:SimpleForm>
                <core:Fragment fragmentName="com.training.exer1tatel.fragment.ShoppingCart" type="XML" />
            </VBox>
        </content>
        <footer>
            <OverflowToolbar id="idOFTFooter">
                <ToolbarSpacer id="idTSpacerFooter"/>
                <Button id="idBtnCheckout" text="{i18n>checkOutBut}" tooltip="{i18n>checkOutTool}" press="onPressCheckout"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>